<div id="loader-wrapper">
    <div id="loader"></div>
</div>
<div class="nav-wrapper">
    <div class="main-logo">
        <img src="../images/logo.png" alt="LOGO">
    </div>
    <div class="nav-menu">
        <h2 class="home-slogan">Play SA Lotto with Misen Groups</h2>
        <div class="recent-results">
            {{#each lastDraw}}
            <div class="lastDraw">
                <div class="ball-inner"> {{this}} </div>
            </div>
            {{/each}}
            <div class="lastBonus-title">Bonus:</div>
            <div class="lastBonus">
                <div class="ball-inner"> {{lastBonus}} </div>
            </div>
        </div>
    </div>
    <div class="logout-btn">
        <a href="/">
            <div>LOGOUT</div>
        </a>
    </div>
</div>
<div class="homeview-wrapper">
    <div id="draw-control">
        <div id="add-draw">
            <button id="add-drawbtn">&#10133; ADD NEW DRAW &#10133;</button>
        </div>
        <div id="new-draw">
            <form action="/draw" method="POST">
                <input id="new-draw-date" type="date" name="drawDate">
                <input id="new-draw-numbers" type="text" name="drawNumbers" placeholder="New Draw Numbers">
                <button id="newdrawbtn">ADD NEW DRAW</button>
            </form>
        </div>
        <div id="draw-history">
            <table id="draw-history-data">
                <th style="width: 3rem;">Game<br />No.</th>
                <th style="width: 6rem;">Draw Date</th>
                <th style="width: 3rem;">Draw<br />No.</th>
                <th style="width: 8rem;">Draw Numbers</th>
                <th style="width: 3rem;">Bonus</th>
                {{#each drawData}}
                <tr>
                    <td> {{this.gameNumber}} </td>
                    <td> {{this.drawDate}} </td>
                    <td> {{this.drawNumber}} </td>
                    <td class="display-numbers"> {{#each this.drawNumbers}}
                        <div class="show-ball"> {{this}} </div>
                        {{/each}}
                    </td>
                    <td style="padding-left: 1rem;">
                        <div class="show-ball"> {{this.bonusNumber}} </div>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
    <div class="groupmain-display">
        {{#each groupHandler}}

        <div class="grouptab group{{{@key}}}" id="grouptab-A">
            {{#each this}}

            <a href="/home/{{{this}}}">
                <div class="group-link">
                    <h1> {{this}} </h1>
                    <div class="group-info">
                        <div>Last updated: <span>2020-09-12</span></div>
                        <div>Last Trained: <span>2020-09-04</span></div>
                        <div>Error Rate: <span>0.0124054337</span></div>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
        {{/each}}
        <div class="group-m-control">
            <button id="backward-btn">Backward</button>
            <input id="gotofield" type="number" />
            <button id="gotobtn">Go-to...</button>
            <button id="forward-btn">Forward</button>
        </div>
    </div>
</div>